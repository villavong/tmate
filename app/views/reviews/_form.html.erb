
		<%= form_for([@user, @user.reviews.new]) do |f| %>

		<!-- <div id="user_stars"></div> -->
		<div class="row">
			<div class="col l5 ">
				<div class="input-field">
					<%= f.text_field :author_name %>
					<label for="author_name">Your Name</label>
				</div>
			</div>
		</div>

		<div class="" style="margin-top:5px;margin-bottom:3px;">
		<%= f.text_area :comment, rows: 3, class: "form-control" %>
		</div>
		<%= f.hidden_field :user_id, value: @user.id %>
		<!-- <%= f.hidden_field :author_name, value: @current_user.fullname %> -->

		<%= f.hidden_field :author_id, value: @current_user.id %>

		<div class="actions">
			<%= f.submit "Save", class: "waves-effect waves-light btn" %>
		</div>

		<% end %>

		<script>
			$('#user_stars').raty({
				path: '/assets',
				scoreName: 'review[star]',
				score: 1
			});
		</script>
